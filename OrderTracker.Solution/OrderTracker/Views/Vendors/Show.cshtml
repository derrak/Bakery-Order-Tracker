@{
  Layout = "_Layout";
}
@using OrderTracker.Models;

<h1>Here are all the orders for this vendor:</h1>

<ol>
  @foreach (Order order in @Model["order"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.OrderTitle</a></li>
    <ul class="no-bullets">
      <li class="no-bullets">@order.OrderDescription</li>
      <li class="no-bullets">$@order.OrderPrice</li>
      <li class="no-bullets">Date:@order.OrderDate</li>
    </ul>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>
